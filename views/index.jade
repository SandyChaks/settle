extends layout

block content
  h1= title
  p Welcome to #{title}
  div(
  class='fb-like'
  data-share="true"
  data-width="450"
  data-show-faces="true"
  )
  div(
  class='fb-login-button'
  data-max-rows="1"
  data-size="xlarge"
  data-show-faces="true"
  data-auto-logout-link="true"
  )

  fb:login-button(
  scope="public_profile,email" 
  onlogin="checkLoginState()"
  )

  #status